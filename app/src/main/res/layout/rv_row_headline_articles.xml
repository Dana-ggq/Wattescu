<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_articles_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="6dp"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/rv_row_headline_articles_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_weight="800"
                android:textColor="@color/dark_gray"
                android:maxLines="3">

            </TextView>

            <TextView
                android:id="@+id/rv_row_headline_articles_tv_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_weight="700"
                android:textColor="@color/medium_gray"
                android:maxLines="1"
                android:layout_marginTop="5dp">

            </TextView>

        </LinearLayout>

        <ImageView
            android:id="@+id/rv_row_headline_articles_iv_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/placeholder"
            android:scaleType="centerCrop"
            />

    </LinearLayout>>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigurationSplashScreenActivity"
    android:background="@drawable/optimal_configuration_bg"
    android:elevation="10dp"
    >

    <ImageView
        android:id="@+id/configuration_splash_screen_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitCenter"
        android:src="@drawable/configuration_splash_bg"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/configuration_splash_screen_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hai sÄƒ descoperim cele mai eficiente electrocasnice pentru tine"
        android:textAlignment="center"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:textStyle="bold"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="@id/configuration_splash_screen_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/configuration_splash_screen_iv"
        app:layout_constraintVertical_bias="0.85" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.SearchFragment">

    <LinearLayout
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descopera"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="alege sustenabilitatea si eficienta"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                />

        </LinearLayout>

        <ImageView
            android:layout_marginTop="8dp"
            android:layout_width="128dp"
            android:layout_height="111dp"
            android:src="@drawable/robot_search" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="25dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/white_smoke"
            android:outlineSpotShadowColor="@color/dark_gray"
            android:outlineAmbientShadowColor="@color/dark_gray"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/fragment_search_iv_living_room"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:src="@drawable/living_room" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="25dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/white_smoke"
            android:outlineSpotShadowColor="@color/dark_gray"
            android:outlineAmbientShadowColor="@color/dark_gray"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/fragment_search_iv__bathroom"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:src="@drawable/washing_room"/>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="25dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/white_smoke"
            android:outlineSpotShadowColor="@color/dark_gray"
            android:outlineAmbientShadowColor="@color/dark_gray"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/search_fragment_iv_office"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:src="@drawable/office" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="25dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/white_smoke"
            android:outlineSpotShadowColor="@color/dark_gray"
            android:outlineAmbientShadowColor="@color/dark_gray"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/search_fragment_iv_kitchen"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:src="@drawable/kitchen" />


        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/search_fragment_tv_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="toate"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/coral"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_marginTop="15dp"
        android:weightSum="6"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wattescu te ajuta!"
                android:textSize="20sp"
                android:textColor="@color/dark_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click pentru a incepe configurarea\n personalizata."
                android:lines="2"
                android:minLines="2"
                android:textSize="15sp"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/search_fragment_iv_personalized_configuration"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_arrow"/>

    </LinearLayout>



</LinearLayout>